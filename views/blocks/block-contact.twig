<section class="content bg-parallax">
    <div class="container position-relative">
        <div class="block-heading">
            {% if block.title is not empty %}
            <h2 class="h1">{{ block.title }}</h2>
            {% endif %}
            {% if block.subtitle is not empty %}
                <h3>{{ block.subtitle }}</h3>
            {% endif %}
        </div>
        <div class="partners">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-4">
                    <a href="#" class="mt-lg-0 d-block contact-logo logo-1">
                        <h5>Ontwikkeling:</h5>
                        <div class="helper">
                            <img src="{{ site.theme.link }}/img/Footer/DPH_footer_logo_black.svg" alt="DPH logo">
                        </div>
                        <h6>Duyn Parc Hellevoets B.V.</h6>
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-4">
                <a href="https://www.roompotrealestate.com/" class="mt-4 d-block mt-lg-0 footer-logo contact-logo logo-2">
                    <h5>Verkoop:</h5>
                    <div class="helper">
                        <img src="{{ site.theme.link }}/img/Footer/roompot-logo.png" alt="Roompot logo">
                    </div>
                </a>
                <a class="d-block" href="tel:+310113303030">+31 (0)113 303030</a>
                <a class="d-block" href="mailto:realestate@roompot.nl">realestate@roompot.nl</a>
                </div>
                <div class="col-12 col-sm-6 col-lg-4">
                    <a href="https://bhvkleisure.com/" class="mt-4 d-block mt-lg-0 contact-logo logo-3">
                        <h5>Verhuur:</h5>
                        <div class="helper">
                            <img src="{{ site.theme.link }}/img/Footer/Logo-BHVK-black.svg" alt="BHVK logo">
                        </div>
                        <h6>bhvkleisure.com</h6>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="block block-text-image-wide style-light-gray p-0 position-relative">
        <div class="image-text-holder">
            <div class="block-holder">
                <div class="image-section h-100">
                    <div class="container-fluid p-0 h-100">
                        <div class="row no-gutters h-100">
                            <div class="col-12 col-lg-5 order-2 order-lg-1">
                            </div>
                            <div class="col-12 col-lg-7 order-1 order-lg-2" style="position:relative;">
                                <div class="image-holder h-100">
                                    <div class="img h-100">
                                        <img class="fluid h-100" src="{{ site.theme.link }}/img/plattegrond.jpg"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-section">
                    <div class="container">
                        <div class="row no-gutters h-100">
                            <div class="col-12 col-lg-4 order-2 order-lg-1 ">
                                <div class="content-holder h-100">
                                    <div class="inner-content my-auto">
                                        <h2 class="h2">Projectlocatie</h2>
                                        <div class="text">
                                            Duinweg 2-4<br>Hellevoetsluis
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>