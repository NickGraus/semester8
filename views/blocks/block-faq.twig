<div class="container">
    <div class="block-holder">
        <div class="faqs">
            <div class="faq_text">
                <h2>{{ block.title }}</h2>
            </div>
            <div class="faq-content">
                {% for faq in block.faqs %}
                    <div class="faq-block">
                        <div class="faq-question">
                            {{ faq.question }}
                            <div class="faq-plus"><i class="fa fa-plus"></i></div>
                        </div>
                        <div class="faq-answer">
                            {{ faq.answer }}
                        </div>
                        <div class="faq-line"></div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
