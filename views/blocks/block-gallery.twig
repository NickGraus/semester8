<div class="block-holder">
  <div class="container">
        <div class="content-holder">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                {% if block.title is not empty %}
                    <div class="title-holder">
                        <h2 class="title h1">
                            {{ block.title }}
                        </h2>
                    </div>
                {% endif %}
                {% if block.text != ""%}
                    <div class="text">
                        {{block.text}}
                    </div>
                {% endif %}
                </div>
            </div>
            {% if block.gallery is not empty %}
                {% include 'components/gallery.twig' with {class: 'col-6 col-md-4 col-lg-3', "gallery" : block.gallery } %}
            {% endif %}
        </div>
    </div>
</div>