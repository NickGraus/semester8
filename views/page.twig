{% extends "base.twig" %}

{% block content %}

	<div class="content-page">
		<div class="container px-0">
			<div class="row">
				<div class="col-12 {% if submenu_block %}col-lg-9 order-lg-2{% endif %}">
					<div class="block block-page content">
						{% include "blocks/block-page.twig" with {"block" : post} %}
					</div>
				</div>
				{% if submenu_block %}
				<div class="col-12 col-lg-3 order-lg-1">
					<div class="page-submenu">
						{% if submenu_block %}
							{% include 'components/submenu-block.twig' with {class: 'col-12 col-lg-3'} %}
						{% endif %}
					</div>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}