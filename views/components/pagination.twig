<nav class="pagination-holder d-block my-4 text-center" aria-label="Page navigation">
    <ul class="pagination d-inline-block">
    {% if posts.pagination.prev %}
        <li class="page-item d-inline-block"><a href="{{posts.pagination.prev.link}}" class="page-link prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}"><div class="arrow-prev"><</div></a></li>
    {% endif %}

        {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="page-item page-index d-inline-block"><a href="{{page.link}}" class="{{page.class}} page-link">{{page.title}}</a></li>
                {% else %}
                    <li class="page-item page-index d-inline-block active"><a href="#" class="{{page.class}} page-link">{{page.title}}</a></li>
                {% endif %}
        {% endfor %}

    {% if posts.pagination.next %}
        <li class="page-item d-inline-block"><a href="{{posts.pagination.next.link}}" class="page-link next {{posts.pagination.next.link|length ? '' : 'invisible'}}"><div class="arrow-next">></div></a></li>
    {% endif %}
    </ul>
</nav>